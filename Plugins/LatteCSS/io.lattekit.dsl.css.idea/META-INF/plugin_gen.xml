<idea-plugin version="2">
	<extensions defaultExtensionNs="org.eclipse.xtext.idea">
		<package
			uri="http://www.lattekit.io/dsl/css/LatteCss"
			class="io.lattekit.dsl.css.latteCss.LatteCssPackage"
		/>
		<resourceFactory 
			type="css"
			class="org.eclipse.xtext.resource.IResourceFactory"
			factoryClass="io.lattekit.dsl.css.idea.LatteCssExtensionFactory"
		/>
		<resourceServiceProvider
			uriExtension="css"
			class="org.eclipse.xtext.idea.resource.IResourceIdeaServiceProvider"
			factoryClass="io.lattekit.dsl.css.idea.LatteCssExtensionFactory"
		/>

		<lang.setup
			language="io.lattekit.dsl.css.LatteCss"
			implementationClass="io.lattekit.dsl.css.idea.LatteCssIdeaSetup"
		/>
	</extensions>

	<extensions defaultExtensionNs="com.intellij">
		<psi.treeChangePreprocessor implementation="io.lattekit.dsl.css.idea.lang.psi.LatteCssCodeBlockModificationListener"/>

		<fileTypeFactory implementation="io.lattekit.dsl.css.idea.lang.LatteCssFileTypeFactory"/>
		<stubElementTypeHolder class="io.lattekit.dsl.css.idea.lang.LatteCssElementTypeProvider"/>
		<lang.ast.factory 
			language="io.lattekit.dsl.css.LatteCss"
			factoryClass="io.lattekit.dsl.css.idea.LatteCssExtensionFactory"
			implementationClass="org.eclipse.xtext.idea.lang.BaseXtextASTFactory"
		/>
		<lang.parserDefinition 
			language="io.lattekit.dsl.css.LatteCss"
			factoryClass="io.lattekit.dsl.css.idea.LatteCssExtensionFactory"
			implementationClass="io.lattekit.dsl.css.idea.lang.parser.LatteCssParserDefinition"
		/>
		<lang.findUsagesProvider 
			language="io.lattekit.dsl.css.LatteCss"
			factoryClass="io.lattekit.dsl.css.idea.LatteCssExtensionFactory"
			implementationClass="org.eclipse.xtext.idea.findusages.BaseXtextFindUsageProvider"
		/>
		<lang.refactoringSupport 
			language="io.lattekit.dsl.css.LatteCss"
			factoryClass="io.lattekit.dsl.css.idea.LatteCssExtensionFactory"
			implementationClass="org.eclipse.xtext.idea.refactoring.BaseXtextRefactoringSupportProvider"
		/>
		<lang.namesValidator 
			language="io.lattekit.dsl.css.LatteCss"
			factoryClass="io.lattekit.dsl.css.idea.LatteCssExtensionFactory"
			implementationClass="com.intellij.lang.refactoring.NamesValidator"
		/>
		<lang.syntaxHighlighterFactory key="io.lattekit.dsl.css.LatteCss" implementationClass="io.lattekit.dsl.css.idea.highlighting.LatteCssSyntaxHighlighterFactory" />
		<lang.braceMatcher 
			language="io.lattekit.dsl.css.LatteCss"
			factoryClass="io.lattekit.dsl.css.idea.LatteCssExtensionFactory"
			implementationClass="com.intellij.lang.PairedBraceMatcher"
		/>
		<annotator 
			language="io.lattekit.dsl.css.LatteCss"
			factoryClass="io.lattekit.dsl.css.idea.LatteCssExtensionFactory"
			implementationClass="org.eclipse.xtext.idea.annotation.IssueAnnotator"
		/>
		<completion.contributor language="io.lattekit.dsl.css.LatteCss" implementationClass="io.lattekit.dsl.css.idea.completion.LatteCssCompletionContributor"/>
		<pom.declarationSearcher implementation="io.lattekit.dsl.css.idea.lang.pom.LatteCssPomDeclarationSearcher"/>

		<lang.psiStructureViewFactory 
			language="io.lattekit.dsl.css.LatteCss"
			factoryClass="io.lattekit.dsl.css.idea.LatteCssExtensionFactory"
			implementationClass="com.intellij.lang.PsiStructureViewFactory"
		/>
		<facetType implementation="io.lattekit.dsl.css.idea.facet.LatteCssFacetType"/>
      	<lang.documentationProvider 
      		language="io.lattekit.dsl.css.LatteCss"
      		factoryClass="io.lattekit.dsl.css.idea.LatteCssExtensionFactory"
      		implementationClass="org.eclipse.xtext.idea.documentation.IdeaDocumentationProvider"
      	/>
		<colorSettingsPage implementation="io.lattekit.dsl.css.idea.highlighting.LatteCssColorSettingsPage"/>
		<highlightVisitor implementation="io.lattekit.dsl.css.idea.highlighting.LatteCssSemanticHighlightVisitor"/>

		<lang.formatter 
			language="io.lattekit.dsl.css.LatteCss"
			factoryClass="io.lattekit.dsl.css.idea.LatteCssExtensionFactory"
			implementationClass="com.intellij.formatting.FormattingModelBuilder"
		/>
		<lang.commenter 
			language="io.lattekit.dsl.css.LatteCss"
			factoryClass="io.lattekit.dsl.css.idea.LatteCssExtensionFactory"
			implementationClass="com.intellij.lang.CodeDocumentationAwareCommenter"
		/>
	</extensions>
</idea-plugin>
